<h1>Edit a article</h1>
<!-- checking for errors then terating over the errors array to display them as a list -->
<% if @article.errors.any? %>
    <h2>The following errors prevented the article from being save</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li> 
    <% end %>
    </ul>
<% end %>


<!-- by specifying model article, it knows where to submit the form and prefills title and description with existing data -->
<%= form_with(model: @article, local: true)  do |f| %>
    <p> 
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>

    <p> 
        <%= f.label :description %><br/>
        <%= f.text_area :description %>
    </p>

    <p> 
        <%= f.submit %>
    </p>
<% end %>